<%-include("partials/header.ejs") %>


<div class="mx-5">
  <h1>Compose</h1>
  <form action="/compose" method="post" enctype="multipart/form-data">
    <div class="my-3 ">
      <label for="title" class="form-label"><h4>Title</h1></label>
      <input name="title" type="text" class="form-control border-dark-subtle" id="title" style="height: 50px" maxlength="150">
    </div>
    <div class="mb-3">
      <label for="converImage" class="form-label"><h4>Cover Image</h3></label>
      <input name="file" class="form-control" type="file" id="converImage">
    </div>
    <div class="mb-3">
      <label for="content" class="form-label"><h4>Content</h3></label>
      <textarea name="content" class="form-control border-dark-subtle" id="content" style="height: 200px"></textarea>
    </div>
    
    <button type="submit" class="btn btn-dark">Create</button>
  </form>
</div>




